<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <servlet>    
        <servlet-name>RemoveUser</servlet-name>
        <servlet-class>bluevia.RemoveUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveUser</servlet-name>
        <url-pattern>/bluevia/remove-user</url-pattern>        
    </servlet-mapping>  
    <servlet>
        <servlet-name>OAuth</servlet-name>
        <servlet-class>bluevia.OAuth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OAuth</servlet-name>
        <url-pattern>/oauth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendSMS</servlet-name>
        <servlet-class>bluevia.SendSMS</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendSMS</servlet-name>
        <url-pattern>/bluevia/send-sms</url-pattern>
    </servlet-mapping>  
     <servlet>    
        <servlet-name>SMSPolling</servlet-name>
        <servlet-class>bluevia.SMSPolling</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SMSPolling</servlet-name>
        <url-pattern>/_ah/start</url-pattern>        
    </servlet-mapping>  
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
